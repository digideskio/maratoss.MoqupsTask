@model Moqups.App.Models.EditUserModel
<script src="~/Scripts/knockout-3.1.0.js"></script>

<script type="text/javascript">
    function EditUserModel(id, fName, lName) {
        this.Id = ko.observable(id);
        this.Name = ko.observable(fName);
        this.Lastname = ko.observable(lName);
    }

    var editUserModel;

    $(function() {
        editUserModel = new EditUserModel(@Model.Id, '@Model.Firstname', '@Model.Lastname');
        editUserModel.Pages = @Model.Pages;
        ko.applyBindings(editUserModel);
    });

    function someClick() {
        $.ajax({
            type: "POST",
            cache: false,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            url: '@Url.Action("SaveOrUpdateAjax", "Home")',
            data: JSON.stringify({
                user:   
                { Id: editUserModel.Id(), FirstName: editUserModel.Name(), Lastname: editUserModel.Lastname() }
            }),
            error: function (data) {
                alert(data.responseText);
            },
            success: function (data) {
                alert(data);
            }
        });
    }
</script>

Firstname
<input type="text" data-bind="value:Name" />

<br />

Lastname
<input type="text" data-bind="value:Lastname" />

<input type="button" value="click" onclick="someClick()" />